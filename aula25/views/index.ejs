<%- include('./partials/head'); %>
<%- include('./partials/header'); %>

  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/images/vingadores-1.jpg" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="/images/vingadores-2.jpg" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="/images/vingadores-3.jpg" class="d-block w-100" alt="...">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <main class="container">
    <section class="mt-3" id="cards">
      <h1>Exemplares</h1>
      <p>Confira abaixo os exemplares do nosso catálogo de filmes exclusivos</p>
      <div class="card-deck">
        <% cards.forEach(card => { %>         
          <div class="card" style="width: 18rem;">
            <img src="<%= card.path_image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= card.title %> </h5>
              <p class="card-text"><%= card.text %> </p>
              <a href="#" class="btn btn-primary"><%= card.button %> </a>
            </div>
          </div>
        <% }) %> 
      </div>
    </section>

    <section id="contact" class="mt-5">
      <h1>Contato</h1>
      <p class="text-muted">Preencha o formulário abaixo para entrar em contato conosco</p>
      <form action="/contato/registrar" method="POST">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="input-nome">Nome</label>
            <input type="text" class="form-control" name="name" id="input-nome" placeholder="Insira seu nome">
          </div>
          <div class="form-group col-md-6">
            <label for="input-email">E-mail</label>
            <input type="email" class="form-control" name="email" id="input-email" placeholder="Email@exemplo.com">
          </div>
          <div class="form-group col-md-12">
            <label for="textarea-mensagem">Mensagem</label>
            <textarea class="form-control" name="message" id="textarea-mensagem" rows="10" placeholder="Insira sua mensagem aqui..."></textarea>
          </div>
        </div>
        <% if (typeof added !== "undefined") { %>
          <div class="form-group col-md-12 alert alert-success">
            Mensagem de contato enviada com sucesso
          </div>
        <% } %> 
        <button type="submit" class="btn btn-primary">Enviar</button>
      </form>
    </section>

    <section class="mt-5" id="localizacao">
      <h1>Localização</h1>
      <p>Verifique a localização da nossa biblioteca</p>
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3656.983057080286!2d-46.64885008593059!3d-23.569051984679056!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce59be874e1f11%3A0x3b0b41a1b5ea3fd!2sBiblioteca!5e0!3m2!1spt-BR!2sbr!4v1565381574508!5m2!1spt-BR!2sbr" width="100%" height="450px" frameborder="0" allowfullscreen></iframe>
    </section>
  </main>

  <%- include('./partials/footer'); %>
  </body>
</html>



